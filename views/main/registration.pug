<form class="register" id="reg-form">
    <p class="close-bttn" onclick="closing()">&#9938;</p>
    <div class="user">
        <div id="patient" onclick="flip1()">Patient</div>
        <div id="doctor" onclick="flip2()">Doctor</div>
    </div>
    <h1 id="header-login">SIGN UP</h1>
    <div class="login-error"></div>
    <div class="input-group-container">
        <b>Username</b>
        <input type="text" class="input-group" id="userName" autocomplete="off" placeholder=" Enter User Name" />
        <div class="error-input-userName"></div>
    </div>
    <div class="input-group-container">
        <b>Email Address</b>
        <input type="email" class="input-group" id="email" autocomplete="off" placeholder=" Enter You email" />
        <div class="error-input-email"></div>
    </div>
    <div class="input-group-container">
        <b>Password</b>
        <input type="password" class="input-group" id="password" autocomplete="off" placeholder=" Enter Password" />
        <div class="error-input-password"></div>
    </div>
    <div class="input-group-container">
        <b>Confirm Password</b>
        <input type="password" class="input-group" id="confirm_password" autocomplete="off" placeholder=" Confirm Your Password" />
        <div class="error-input-confirmPassword"></div>
    </div>
    <input type="checkbox" name="remember" id="agree"><label for="agree" id="remember_me"> I agree all
        statements in <a href="#">Terms of service</a></label>
    <div class="sub"><button type="submit" class="but">Sign Up</button></div>
    <p class="signup" onclick="Hide()">Have already an account? <a href="#"> Login Here</a></p>
</form>